<h3>Active Families</h3>

<table class="table">
  <tr>
    <th>Parent First Name</th>
    <th>Family Name</th>
    <th>E-mail</th>
    <th>Phone</th>
    <th></th>
  </tr>

<% @active_families.each do |family| %>
  <tr>
    <td><%= link_to family.parent_first_name, family_path(family) %></td>
    <td align="center"><%= family.family_name %></td>
    <td align="center"><%= family.email %></td>
    <td align="center"><%= family.phone %></td>
    <td><%= link_to 'Edit', edit_family_path(family), class: "button tiny radius" %></td>
  </tr>
<% end %>
</table>
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate @active_families, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>
