<%= simple_nested_form_for @instructor, :html => { :class => 'form-horizontal' } do |instructor_form| %>
	<div class="row">
		<div class="small-7 columns">
			<fieldset>
					<%= render "form", :f => instructor_form %>
		  </fieldset>
		</div>
		<div class="small-5 columns">
			<fieldset>
				<legend>Update user associated with instructor</legend>				
					<%= instructor_form.simple_fields_for :user do |user_form| %>
						<%= render "users_form", :f => user_form %>
					<% end %>
			</fieldset> 
		</div>
	</div>

<% end %>
